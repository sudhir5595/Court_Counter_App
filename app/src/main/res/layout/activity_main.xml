<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        <TextView
            android:id="@+id/team_name_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="25dp"
            android:text="Team A"
            android:textAllCaps="false"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/score_text_view_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="75sp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/increment_button_3_a"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="+3 points"
            android:onClick="incrementOrder3_a"/>

        <Button
            android:id="@+id/increment_button_2_a"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="+2 points"
            android:onClick="incrementOrder2_a"/>

        <Button
            android:id="@+id/increment_button_1_a"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="free throw"
            android:onClick="incrementOrder1_a"/>

        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="400dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/team_name_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="25dp"
                android:text="Team B"
                android:textAllCaps="false"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/score_text_view_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="75sp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/increment_button_3_b"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="+3 points"
                android:onClick="incrementOrder3_b"/>

            <Button
                android:id="@+id/increment_button_2_b"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="+2 points"
                android:onClick="incrementOrder2_b"/>

            <Button
                android:id="@+id/increment_button_1_b"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="free throw"
                android:onClick="incrementOrder1_b"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/reset_button_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="reset"
        android:onClick="reset_score"/>
</RelativeLayout>